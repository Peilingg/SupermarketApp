<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Manage Orders</title>
  <style>
    body { background: #f7f8fa; }
    .card-border { border-radius: 10px; }
    .label { color: #6c757d; font-size: 0.9rem; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Manage Orders</h2>
      <div class="text-muted small">Admin â€“ view all user orders</div>
    </div>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>

    <% if (!purchases || purchases.length === 0) { %>
      <div class="alert alert-info">No orders found.</div>
    <% } else { %>
      <div class="row g-3">
        <% purchases.forEach(function(p) { %>
          <div class="col-lg-6">
            <div class="card shadow-sm card-border">
              <div class="card-header d-flex justify-content-between">
                <div>
                  <strong>Order #<%= p.purchaseId %></strong><br>
                  <small class="text-muted"><%= new Date(p.created_at).toLocaleString() %></small>
                  <div class="text-muted small mt-1">
                    <span class="label">User</span> <%= p.username || 'Unknown' %> (<%= p.email || '' %>)
                  </div>
                </div>
                <div class="text-end">
                  <div class="label">Payment method</div>
                  <div><%= p.paymentMethod || 'Not specified' %></div>
                </div>
              </div>
              <div class="card-body">
                <div class="table-responsive mb-3">
                  <table class="table table-bordered align-middle mb-0">
                    <thead class="table-light">
                      <tr>
                        <th style="width:48px">#</th>
                        <th>Product</th>
                        <th style="width:110px">Unit</th>
                        <th style="width:100px">Qty</th>
                        <th style="width:120px">Line</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (!p.items || p.items.length === 0) { %>
                        <tr><td colspan="5" class="text-center">No items</td></tr>
                      <% } else { %>
                        <% p.items.forEach(function(it, idx) { %>
                          <tr>
                            <td><%= idx + 1 %></td>
                            <td>
                              <div class="d-flex align-items-center">
                                <% if (it.image) { %>
                                  <img src="/images/<%= it.image %>" alt="" style="height:40px; width:40px; object-fit:cover; margin-right:8px;">
                                <% } %>
                                <div><strong><%= it.productName || 'Item' %></strong></div>
                              </div>
                            </td>
                            <td>$<%= Number(it.price || 0).toFixed(2) %></td>
                            <td><%= it.quantity %></td>
                            <td>$<%= Number(it.lineTotal || (it.price * it.quantity) || 0).toFixed(2) %></td>
                          </tr>
                        <% }); %>
                      <% } %>
                    </tbody>
                  </table>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="label">Payment details</div>
                    <div><%= p.paymentDetails || '-' %></div>
                  </div>
                  <div class="col-md-6">
                    <table class="table table-borderless mb-0">
                      <tbody>
                        <tr>
                          <th class="text-end">Subtotal</th>
                          <td class="text-end">$<%= Number(p.subtotal || 0).toFixed(2) %></td>
                        </tr>
                        <tr>
                          <th class="text-end">Tax</th>
                          <td class="text-end">$<%= Number(p.tax || 0).toFixed(2) %></td>
                        </tr>
                        <tr>
                          <th class="text-end">Shipping</th>
                          <td class="text-end">$<%= Number(p.shipping || 0).toFixed(2) %></td>
                        </tr>
                        <tr class="table-active">
                          <th class="text-end">Total</th>
                          <th class="text-end">$<%= Number(p.total || 0).toFixed(2) %></th>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
