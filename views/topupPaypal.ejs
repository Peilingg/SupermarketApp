<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=SGD&locale=en_SG"></script>
  <title>Top Up with PayPal</title>
  <style>
    :root {
      --bg: linear-gradient(135deg, #f7f9ff 0%, #eef2ff 50%, #f8fbff 100%);
      --card: #ffffff;
      --primary: #667eea;
      --accent: #8e5cf6;
      --border: #e5e7eb;
      --shadow: 0 10px 30px rgba(102, 126, 234, 0.12);
    }
    body { background: var(--bg); min-height: 100vh; }
    .card-border { border-radius: 12px; border: 1px solid var(--border); box-shadow: var(--shadow); }
    .header-bar {
      background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
      color: #fff;
      border-radius: 14px;
      padding: 22px;
      box-shadow: 0 12px 30px rgba(102, 126, 234, 0.25);
      margin-bottom: 30px;
    }
    .amount-display { font-size: 2.4rem; font-weight: 800; }
    #paypal-button-container { margin-top: 20px; }
    .loading { text-align: center; padding: 20px; }
    .spinner { display: inline-block; width: 30px; height: 30px; border: 3px solid #f3f3f3; border-top: 3px solid var(--primary); border-radius: 50%; animation: spin 1s linear infinite; }
    @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-1">Top Up with PayPal</h2>
        <small class="text-muted">Secure payment powered by PayPal</small>
      </div>
      <a href="/ewallet/topup" class="btn btn-outline-secondary">Cancel</a>
    </div>

    <div class="header-bar">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <div class="text-uppercase small" style="opacity:0.9;">Top-Up Amount</div>
          <div class="amount-display">$<%= Number(amount).toFixed(2) %></div>
        </div>
        <div style="font-size: 2rem; opacity: 0.3;">ðŸ’³</div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card card-border">
          <div class="card-body">
            <div id="paypal-button-container"></div>
            <div class="loading" id="loading-spinner" style="display: none;">
              <div class="spinner"></div>
              <p class="mt-2">Processing payment...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const AMOUNT = '<%= amount %>';

    paypal.Buttons({
      createOrder: async (data, actions) => {
        try {
          document.getElementById('loading-spinner').style.display = 'block';
          
          const response = await fetch('/api/paypal/topup/create-order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ amount: AMOUNT })
          });

          const orderData = await response.json();
          
          if (orderData.id) {
            return orderData.id;
          } else {
            const errorDetail = orderData?.details?.[0];
            const errorMessage = errorDetail ? `${errorDetail.issue} ${errorDetail.description}` : 'Unknown error';
            throw new Error(errorMessage);
          }
        } catch (error) {
          console.error('Error creating order:', error);
          document.getElementById('loading-spinner').style.display = 'none';
          alert('Failed to create PayPal order: ' + error.message);
        }
      },

      onApprove: async (data, actions) => {
        try {
          const response = await fetch('/api/paypal/topup/capture-order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderID: data.orderID })
          });

          const result = await response.json();

          if (result.success) {
            // Success - redirect to wallet
            window.location.href = result.redirectUrl;
          } else {
            alert('Payment capture failed: ' + (result.error || 'Unknown error'));
            document.getElementById('loading-spinner').style.display = 'none';
          }
        } catch (error) {
          console.error('Error capturing order:', error);
          alert('Error processing payment: ' + error.message);
          document.getElementById('loading-spinner').style.display = 'none';
        }
      },

      onError: (err) => {
        console.error('PayPal error:', err);
        alert('Payment error: ' + err.message);
        document.getElementById('loading-spinner').style.display = 'none';
      }
    }).render('#paypal-button-container');
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
