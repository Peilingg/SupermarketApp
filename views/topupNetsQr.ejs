<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Top Up with NETS QR</title>
  <style>
    :root {
      --bg: linear-gradient(135deg, #f7f9ff 0%, #eef2ff 50%, #f8fbff 100%);
      --card: #ffffff;
      --primary: #667eea;
      --accent: #8e5cf6;
      --border: #e5e7eb;
      --shadow: 0 10px 30px rgba(102, 126, 234, 0.12);
    }
    body { background: var(--bg); min-height: 100vh; }
    .card-border { border-radius: 12px; border: 1px solid var(--border); box-shadow: var(--shadow); }
    .header-bar {
      background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
      color: #fff;
      border-radius: 14px;
      padding: 22px;
      box-shadow: 0 12px 30px rgba(102, 126, 234, 0.25);
      margin-bottom: 30px;
    }
    .amount-display { font-size: 2.4rem; font-weight: 800; }
    .qr-container { text-align: center; padding: 40px 20px; }
    .qr-code { max-width: 300px; margin: 0 auto; }
    .qr-code img { max-width: 100%; height: auto; }
    .loading { text-align: center; padding: 40px; }
    .spinner { display: inline-block; width: 40px; height: 40px; border: 4px solid #f3f3f3; border-top: 4px solid var(--primary); border-radius: 50%; animation: spin 1s linear infinite; }
    @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    .timer-badge {
      display: inline-block;
      background: #ffc107;
      color: #000;
      padding: 8px 16px;
      border-radius: 20px;
      font-weight: bold;
      margin-bottom: 20px;
    }
    .error-message {
      color: #dc3545;
      text-align: center;
      padding: 20px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-1">Top Up with NETS QR</h2>
        <small class="text-muted">Scan the QR code with your NETS app</small>
      </div>
      <a href="/ewallet/topup" class="btn btn-outline-secondary">Cancel</a>
    </div>

    <div class="header-bar">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <div class="text-uppercase small" style="opacity:0.9;">Top-Up Amount</div>
          <div class="amount-display">$<%= Number(amount).toFixed(2) %></div>
        </div>
        <div style="font-size: 2rem; opacity: 0.3;">üì±</div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card card-border">
          <div class="card-header bg-light">
            <h5 class="mb-0">Scan to Pay</h5>
          </div>
          <div class="card-body">
            <div id="qr-container" class="qr-container">
              <div class="loading">
                <div class="spinner"></div>
                <p class="mt-3">Generating QR code...</p>
              </div>
            </div>
            <p class="text-center text-muted mt-3">
              <small>Open your NETS app and scan this code to complete the payment.</small>
            </p>
          </div>
        </div>

        <div class="alert alert-info mt-3">
          <strong>Instructions:</strong>
          <ol class="mb-0 mt-2">
            <li>Open your NETS mobile app</li>
            <li>Select "Scan QR Code"</li>
            <li>Scan the QR code above</li>
            <li>Confirm and authorize the payment</li>
            <li>You'll be redirected once the payment is confirmed</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <script>
    const amount = <%= amount %>;
    const txnRetrievalRef = '<%= txnRetrievalRef || "" %>';

    // Generate QR code when page loads
    window.addEventListener('DOMContentLoaded', function() {
      generateNetsQrCode();
    });

    function generateNetsQrCode() {
      fetch('/api/nets/topup/qr-code', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ amount: amount })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success && data.qrCode) {
          displayQrCode(data);
        } else {
          showError('Failed to generate QR code: ' + (data.error || 'Unknown error'));
        }
      })
      .catch(error => {
        console.error('Error:', error);
        showError('Failed to generate QR code: ' + error.message);
      });
    }

    function displayQrCode(data) {
      const container = document.getElementById('qr-container');
      
      let html = '<div class="timer-badge">Time remaining: <span id="timer">300</span>s</div>';
      html += '<div class="qr-code">';
      html += '<img src="data:image/png;base64,' + data.qrCode + '" alt="NETS QR Code">';
      html += '</div>';
      
      container.innerHTML = html;
      
      // Start countdown timer
      if (data.timer) {
        startTimer(data.timer);
      }
      
      // Poll for payment confirmation
      pollForPaymentConfirmation(data.txnRetrievalRef);
    }

    function showError(message) {
      const container = document.getElementById('qr-container');
      container.innerHTML = '<div class="error-message"><p>‚ö†Ô∏è ' + message + '</p><a href="/ewallet/topup" class="btn btn-secondary mt-3">Back to Top-Up</a></div>';
    }

    function startTimer(seconds) {
      let remaining = seconds;
      const timerElement = document.getElementById('timer');
      
      const interval = setInterval(() => {
        remaining--;
        if (timerElement) {
          timerElement.textContent = remaining;
        }
        
        if (remaining <= 0) {
          clearInterval(interval);
          showError('QR code expired. Please go back and try again.');
        }
      }, 1000);
    }

    function pollForPaymentConfirmation(txnRetrievalRef) {
      // Poll every 2 seconds for confirmation
      const pollInterval = setInterval(() => {
        fetch('/api/nets/topup/check-payment', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ txnRetrievalRef: txnRetrievalRef, amount: amount })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success && data.completed) {
            clearInterval(pollInterval);
            window.location.href = '/nets-qr/topup/success?txn_retrieval_ref=' + txnRetrievalRef;
          }
        })
        .catch(error => console.error('Poll error:', error));
      }, 2000);
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
