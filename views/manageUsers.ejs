<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Manage Users</title>
  <style>
    body { background: #f7f8fa; }
    .card-border { border-radius: 10px; }
    .label { color: #6c757d; font-size: 0.9rem; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Manage Users</h2>
      <div class="text-muted small">Admin â€“ view and edit all accounts</div>
    </div>

    <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>

    <% if (!users || users.length === 0) { %>
      <div class="alert alert-info">No users found.</div>
    <% } else { %>
      <div class="row g-3">
        <% users.forEach(function(u, idx) { %>
          <div class="col-md-6">
            <div class="card shadow-sm card-border">
              <div class="card-header d-flex justify-content-between">
                <div>
                  <strong><%= u.username %></strong>
                  <div class="text-muted small"><%= u.email %></div>
                </div>
                <span class="badge <%= u.role === 'admin' ? 'bg-danger' : 'bg-secondary' %> align-self-start"><%= u.role %></span>
              </div>
              <div class="card-body">
                <div class="mb-2">
                  <div class="label">Status</div>
                  <div>
                    <span class="badge <%= (u.status || 'active') === 'active' ? 'bg-success' : 'bg-secondary' %>">
                      <%= u.status || 'active' %>
                    </span>
                  </div>
                </div>
                <div class="mb-2">
                  <div class="label">Address</div>
                  <div><%= u.address || '-' %></div>
                </div>
                <div class="mb-2">
                  <div class="label">Contact</div>
                  <div><%= u.contact || '-' %></div>
                </div>
                <div class="d-flex gap-2 mt-2">
                  <a class="btn btn-sm btn-outline-primary" href="/users/<%= u.userId %>">View</a>
                  <a class="btn btn-sm btn-primary" href="/users/<%= u.userId %>/edit">Edit</a>
                  <a class="btn btn-sm btn-danger" href="/users/<%= u.userId %>/delete" onclick="return confirm('Delete this user?');">Delete</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
