<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    /* Hover effect for cards */
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
      transition: all 0.3s ease;
    }
    .card {
      transition: all 0.3s ease;
    }
    .card img {
      height: 200px;
      object-fit: contain;
    }

    /* Center select value */
    .quantity-wrap { display:flex; justify-content:center; }
    .quantity-select {
      text-align: center;
      text-align-last: center; /* Firefox */
      -moz-text-align-last: center;
      -webkit-appearance: none;
      appearance: none;
      max-width: 110px;
      margin: 0 auto;
    }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/cart">View Cart</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/profile">
                <img src="/images/profile.png" alt="Profile" width="24" class="rounded-circle"> Profile
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>


    <div class="container mt-4">
        <h2 class="mb-4">Food Items</h2>
        <!-- Search and Filter Form -->
        <form action="/filteredProduct" method="GET">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <input type="text" class="form-control" name="ProductCategory" placeholder="Filter by Category"
                        value="<%= searchName || '' %>">
                </div>
                <div class="col-md-4 mb-3">
                    <select id="category" name="category" class="form-select">
                        <option value="">All categories</option>
                        <option value="Bakery">Bakery</option>
                        <option value="Beverages">Beverages</option>
                        <option value="Dairy">Dairy</option>
                        <option value="Snacks">Snacks</option>
                        <option value="Fruits & Vegetables">Fruits & Vegetables</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                </div>
            </div>
        </form>

        <% for(let i=0; i < products.length; i++) { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card h-100 text-center shadow-sm">
            <img src="/images/<%= products[i].image %>" class="card-img-top p-3" style="height:200px; object-fit:contain;">
            <div class="card-body">
              <h5 class="card-title">
                <a href="/product/<%= products[i].productId %>"><%= products[i].productName %></a>
              </h5>
              <p class="card-text"><strong>Quantity:</strong> <%= products[i].quantity %></p>
              <p class="card-text"><strong>Price:</strong> $<%= products[i].price.toFixed(2) %></p>
              <p class="card-text"><strong>Category:</strong> <%= products[i].category %></p>

              <div class="quantity-wrap mt-2">
                <select class="form-select quantity-select" onchange="document.getElementById('quantity-<%= products[i].productId %>').value = this.value">
                  <% for (let q = 1; q <= products[i].quantity; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
              </div>

              <form action="/add-to-cart/<%= products[i].productId %>" method="POST" class="text-center mt-2">
                  <input type="hidden" name="quantity" id="quantity-<%= products[i].productId %>" value="1">
                  <button type="submit" class="btn btn-primary">Add to Cart</button>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

</body>
</html>