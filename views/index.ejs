<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Supermarket App</title>
    <!-- Bootstrap CDN for quick styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body { 
        padding-top: 72px; 
        background:#f8f9fa; 
      }
      .hero { 
        min-height: 80vh; 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        text-align: center; 
        flex-direction: column; 
      }
      .card-feature { 
        transition: transform .15s ease; 
      }
      .card-feature:hover { 
        transform: translateY(-6px); 
      }
    </style>
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navMain">
          <ul class="navbar-nav ms-auto">
            <% if (user) { %>
              <li class="nav-item"><a class="nav-link" href="#">Hello, <%= user.username || user.email %></a></li>
              <% if (user.role && user.role.toLowerCase() === 'admin') { %>
                <li class="nav-item"><a class="nav-link" href="/inventory">Inventory</a></li>
              <% } else { %>
                <li class="nav-item"><a class="nav-link" href="/shopping">Shopping</a></li>
              <% } %>
              <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
              <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            <% } else { %>
              <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
              <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Hero -->
    <section class="hero">
      <div class="container">
        <h1 class="display-5 mb-3">Welcome to the Supermarket App</h1>
        <p class="lead text-muted mb-3">Your one-stop shop for all your grocery needs!</p>
        <img src="/images/cashiergirl.png" alt="Supermarket" class="mb-3" style="width:220px;height:220px;">

        <!-- Centered cards for Register and Login -->
        <% if (!user) { %>
          <div class="row justify-content-center g-4">
            <div class="col-md-4">
              <div class="card card-feature shadow-sm h-100 text-center">
                <div class="card-body">
                  <h5 class="card-title">Join Supermarket App Today</h5>
                  <img src="/images/register.jpg" alt="Register" class="mb-3" style="width:100px;height:100px;">
                  <p class="card-text text-muted">Register now to enjoy a seamless shopping experience</p>
                  <a href="/register" class="btn btn-outline-warning">Get Started</a>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="card card-feature shadow-sm h-100 text-center">
                <div class="card-body">
                  <h5 class="card-title">Welcome Back!</h5>
                  <img src="/images/profile.jpg" alt="Login" class="mb-3" style="width:100px;height:100px;">
                  <p class="card-text text-muted">Access your favourite products and exclusive deals</p>
                  <a href="/login" class="btn btn-outline-secondary mt-3">Login</a>
                </div>
              </div>
            </div>
          </div>
        <% } else { %>
          <div class="mt-4">
            <% if (user.role && user.role.toLowerCase() === 'admin') { %>
              <a class="btn btn-primary" href="/inventory">Go to Inventory</a>
            <% } else { %>
              <a class="btn btn-primary" href="/shopping">Start Shopping</a>
            <% } %>
          </div>
        <% } %>
      </div>
    </section>

  </body>
</html>