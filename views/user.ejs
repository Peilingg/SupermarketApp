<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>User Details</title>
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container my-4" style="max-width:720px;">
    <h3>User Details</h3>
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (!user) { %>
      <div class="alert alert-warning">User not found.</div>
      <a href="/users" class="btn btn-secondary mt-2">Back to Users</a>
    <% } else { %>
      <div class="card shadow-sm">
        <div class="card-body">
          <p><strong>Name:</strong> <%= user.username %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Role:</strong> <%= user.role %></p>
          <p><strong>Status:</strong> <span class="badge <%= (user.status || 'active') === 'active' ? 'bg-success' : 'bg-secondary' %>"><%= user.status || 'active' %></span></p>
          <p><strong>Address:</strong> <%= user.address || '-' %></p>
          <p><strong>Contact:</strong> <%= user.contact || '-' %></p>
          <div class="d-flex gap-2 mt-3">
            <a class="btn btn-primary" href="/users/<%= user.userId %>/edit">Edit</a>
            <a class="btn btn-outline-secondary" href="/manageusers">Back to Users</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>
