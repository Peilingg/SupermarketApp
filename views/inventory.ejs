<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    /* Hover effect for cards */
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
      transition: all 0.3s ease;
    }
    .card {
      transition: all 0.3s ease;
    }
    .card img {
      height: 200px;
      object-fit: contain;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar2') %>

  <div class="container mt-4">
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <div class="text-center mb-4"><h2>Products from Supermarket App Database</h2></div>
    
    <div class="row g-4">
      <% for(let i=0; i < products.length; i++) { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card h-100 text-center shadow-sm">
            <img src="/images/<%= products[i].image %>" class="card-img-top p-3" style="height:200px; object-fit:contain;">
            <div class="card-body">
              <h5 class="card-title">
                <a href="/product/<%= products[i].productId %>"><%= products[i].productName %></a>
              </h5>
              <p class="card-text"><strong>Quantity:</strong> <%= products[i].quantity %></p>
              <p class="card-text"><strong>Price:</strong> $<%= products[i].price.toFixed(2) %></p>
              <p class="card-text"><strong>Category:</strong> <%= products[i].category %></p>
              <a href="/updateProduct/<%= products[i].productId %>" class="btn btn-primary">Edit</a>
              <a href="/deleteProduct/<%= products[i].productId %>" onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-danger">Delete</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
