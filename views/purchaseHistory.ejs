<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Purchase History</title>
  <style>
    body { background: #f7f8fa; }
    .card-border { border-radius: 10px; }
    .label { color: #6c757d; font-size: 0.9rem; }
    .table thead th { background-color: #f8f9fa; }
  </style>
</head>
<body>
   <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link" href="/favourite">View Favourites</a>
            </li> 
            <li class="nav-item">
                <a class="nav-link" href="/cart">View Cart</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/profile">
                <img src="/images/profile.png" alt="Profile" width="24" class="rounded-circle"> Profile
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
            </li>
            </ul>
        </div>
        </div>
    </nav>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Purchase History</h2>
      <div class="text-muted small">View your past orders and receipts.</div>
    </div>
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="alert alert-danger">
        <% error.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (message && message.success) { %>
      <div class="alert alert-success">
        <%= message.success %>
      </div>
    <% } %>
    <% if (message && message.error) { %>
      <div class="alert alert-danger">
        <%= message.error %>
      </div>
    <% } %>

    <% if (purchases && purchases.length > 0) { %>
      <% purchases.forEach(function(p) { %>
        <div class="card mb-4 shadow-sm card-border">
          <div class="card-header d-flex justify-content-between">
            <div>
              <strong>Invoice #<%= p.purchaseId %></strong><br>
              <small class="text-muted"><%= new Date(p.created_at).toLocaleString() %></small>
            </div>
            <div class="text-end">
              <div class="label">Payment method</div>
              <div><%= p.paymentMethod || 'Not specified' %></div>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive mb-3">
              <table class="table table-bordered align-middle">
                <thead class="table-light">
                  <tr>
                    <th style="width:48px">#</th>
                    <th>Product</th>
                    <th style="width:120px">Unit</th>
                    <th style="width:120px">Quantity</th>
                    <th style="width:140px">Line total</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (!p.items || p.items.length === 0) { %>
                    <tr><td colspan="5" class="text-center">No items</td></tr>
                  <% } else { %>
                    <% p.items.forEach(function(it, idx) { %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td>
                          <div class="d-flex align-items-center">
                            <% if (it.image) { %>
                              <img src="/images/<%= it.image %>" alt="" style="height:48px; width:48px; object-fit:cover; margin-right:8px;">
                            <% } %>
                            <div>
                              <div><strong><%= it.productName || 'Item' %></strong></div>
                            </div>
                          </div>
                        </td>
                        <td>$<%= Number(it.price || 0).toFixed(2) %></td>
                        <td><%= it.quantity %></td>
                        <td>$<%= Number(it.lineTotal || (it.price * it.quantity) || 0).toFixed(2) %></td>
                      </tr>
                    <% }); %>
                  <% } %>
                </tbody>
              </table>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="label">Payment details</div>
                <div><%= p.paymentDetails || '-' %></div>
              </div>
              <div class="col-md-6">
                <table class="table table-borderless mb-0">
                  <tbody>
                    <tr>
                      <th class="text-end">Subtotal</th>
                      <td class="text-end">$<%= Number(p.subtotal || 0).toFixed(2) %></td>
                    </tr>
                    <tr>
                      <th class="text-end">Tax</th>
                      <td class="text-end">$<%= Number(p.tax || 0).toFixed(2) %></td>
                    </tr>
                    <tr>
                      <th class="text-end">Shipping</th>
                      <td class="text-end">$<%= Number(p.shipping || 0).toFixed(2) %></td>
                    </tr>
                    <tr class="table-active">
                      <th class="text-end">Total</th>
                      <th class="text-end">$<%= Number(p.total || 0).toFixed(2) %></th>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="d-flex justify-content-end gap-2">
              <form method="POST" action="/purchases/<%= p.purchaseId %>/reorder" class="d-inline">
                <button type="submit" class="btn btn-outline-primary btn-sm">Reorder these items</button>
              </form>
              <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#refundModal<%= p.purchaseId %>">Request Refund</button>
            </div>

            <!-- Refund Modal -->
            <div class="modal fade" id="refundModal<%= p.purchaseId %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Request Refund</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <form action="/refund/request/<%= p.purchaseId %>" method="POST">
                    <div class="modal-body">
                      <p class="text-muted">Request a full refund of <strong>$<%= Number(p.total || 0).toFixed(2) %></strong></p>
                      <div class="mb-3">
                        <label for="reason<%= p.purchaseId %>" class="form-label">Reason for Refund (Optional)</label>
                        <textarea class="form-control" id="reason<%= p.purchaseId %>" name="reason" rows="3" placeholder="Please tell us why you're requesting a refund..."></textarea>
                      </div>
                      <div class="alert alert-info">
                        <strong>Note:</strong> Once approved by admin, the refund amount will be added to your store credit for future purchases.
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-warning">Submit Refund Request</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="alert alert-info">You have no purchase history yet.</div>
    <% } %>

    <a href="/shopping" class="btn btn-primary">Continue shopping</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
