<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Manage Refund Requests</title>
  <style>
    body { background: #f7f8fa; }
    .card-border { border-radius: 10px; }
    .badge-pending { background-color: #ffc107; color: #000; }
    .badge-approved { background-color: #28a745; }
    .badge-rejected { background-color: #dc3545; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Refund Requests Management</h2>
    </div>

    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>

    <!-- Filter by Status -->
    <div class="mb-3">
      <div class="btn-group" role="group">
        <a href="/managerefunds?status=pending" class="btn <%= status === 'pending' ? 'btn-primary' : 'btn-outline-primary' %>">
          Pending
        </a>
        <a href="/managerefunds?status=approved" class="btn <%= status === 'approved' ? 'btn-success' : 'btn-outline-success' %>">
          Approved
        </a>
        <a href="/managerefunds?status=rejected" class="btn <%= status === 'rejected' ? 'btn-danger' : 'btn-outline-danger' %>">
          Rejected
        </a>
        <a href="/managerefunds?status=all" class="btn <%= status === 'all' ? 'btn-secondary' : 'btn-outline-secondary' %>">
          All
        </a>
      </div>
    </div>

    <!-- Refunds Table -->
    <div class="table-responsive">
      <table class="table table-hover card-border">
        <thead class="table-light">
          <tr>
            <th>Refund ID</th>
            <th>Customer</th>
            <th>Order ID</th>
            <th>Amount</th>
            <th>Requested</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (!refunds || refunds.length === 0) { %>
            <tr>
              <td colspan="7" class="text-center text-muted py-4">
                No refund requests found.
              </td>
            </tr>
          <% } else { %>
            <% refunds.forEach(function(refund) { %>
              <tr>
                <td><strong>#<%= refund.refundRequestId %></strong></td>
                <td>
                  <div><strong><%= refund.username %></strong></div>
                  <small class="text-muted"><%= refund.email %></small>
                </td>
                <td>#<%= refund.purchaseId %></td>
                <td><strong>$<%= Number(refund.refund_amount).toFixed(2) %></strong></td>
                <td>
                  <small><%= new Date(refund.requested_at).toLocaleDateString() %></small>
                </td>
                <td>
                  <% if (refund.status === 'pending') { %>
                    <span class="badge badge-pending">Pending</span>
                  <% } else if (refund.status === 'approved') { %>
                    <span class="badge badge-approved">Approved</span>
                  <% } else if (refund.status === 'rejected') { %>
                    <span class="badge badge-rejected">Rejected</span>
                  <% } %>
                </td>
                <td>
                  <a href="/refund/<%= refund.refundRequestId %>" class="btn btn-sm btn-info">View</a>
                  <% if (refund.status === 'pending') { %>
                    <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#approveModal<%= refund.refundRequestId %>">Approve</button>
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal<%= refund.refundRequestId %>">Reject</button>
                  <% } %>
                </td>
              </tr>

              <!-- Approve Modal -->
              <% if (refund.status === 'pending') { %>
                <div class="modal fade" id="approveModal<%= refund.refundRequestId %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">Approve Refund</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <form action="/refund/<%= refund.refundRequestId %>/approve" method="POST">
                        <div class="modal-body">
                          <p>Approve refund of <strong>$<%= Number(refund.refund_amount).toFixed(2) %></strong> for <strong><%= refund.username %></strong>?</p>
                          <p class="text-muted">The refund will be added as store credit to their account.</p>
                          <div class="mb-3">
                            <label for="adminNotes<%= refund.refundRequestId %>" class="form-label">Admin Notes (Optional)</label>
                            <textarea class="form-control" id="adminNotes<%= refund.refundRequestId %>" name="adminNotes" rows="2"></textarea>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                          <button type="submit" class="btn btn-success">Approve Refund</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>

                <!-- Reject Modal -->
                <div class="modal fade" id="rejectModal<%= refund.refundRequestId %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">Reject Refund</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <form action="/refund/<%= refund.refundRequestId %>/reject" method="POST">
                        <div class="modal-body">
                          <p>Reject refund request of <strong>$<%= Number(refund.refund_amount).toFixed(2) %></strong> for <strong><%= refund.username %></strong>?</p>
                          <div class="mb-3">
                            <label for="rejectNotes<%= refund.refundRequestId %>" class="form-label">Reason for Rejection</label>
                            <textarea class="form-control" id="rejectNotes<%= refund.refundRequestId %>" name="adminNotes" rows="2" required placeholder="Please provide a reason..."></textarea>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                          <button type="submit" class="btn btn-danger">Reject Refund</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              <% } %>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
