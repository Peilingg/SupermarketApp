<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>My Refund Requests</title>
  <style>
    body { background: #f7f8fa; }
    .card-border { border-radius: 10px; }
    .badge-pending { background-color: #ffc107; color: #000; }
    .badge-approved { background-color: #28a745; }
    .badge-rejected { background-color: #dc3545; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-4">
    <div class="mb-4">
      <h2>My Refund Requests</h2>
      <p class="text-muted">Track the status of your refund requests</p>
    </div>

    <% if (!refunds || refunds.length === 0) { %>
      <div class="alert alert-info">
        <strong>No refund requests yet.</strong> You can request a refund from your <a href="/purchases">purchase history</a>.
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover card-border">
          <thead class="table-light">
            <tr>
              <th>Order ID</th>
              <th>Amount</th>
              <th>Reason</th>
              <th>Requested</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% refunds.forEach(function(refund) { %>
              <tr>
                <td><strong>#<%= refund.purchaseId %></strong></td>
                <td><strong>$<%= Number(refund.refund_amount).toFixed(2) %></strong></td>
                <td>
                  <% if (refund.reason) { %>
                    <small><%= refund.reason.substring(0, 50) %><%= refund.reason.length > 50 ? '...' : '' %></small>
                  <% } else { %>
                    <small class="text-muted">No reason provided</small>
                  <% } %>
                </td>
                <td>
                  <small><%= new Date(refund.requested_at).toLocaleDateString() %></small>
                </td>
                <td>
                  <% if (refund.status === 'pending') { %>
                    <span class="badge badge-pending">Pending</span>
                  <% } else if (refund.status === 'approved') { %>
                    <span class="badge badge-approved">Approved âœ“</span>
                  <% } else if (refund.status === 'rejected') { %>
                    <span class="badge badge-rejected">Rejected</span>
                  <% } %>
                </td>
              </tr>
              <% if (refund.admin_notes) { %>
                <tr class="table-light">
                  <td colspan="5">
                    <small class="text-muted"><strong>Admin Note:</strong> <%= refund.admin_notes %></small>
                  </td>
                </tr>
              <% } %>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="alert alert-info mt-3">
        <strong>How it works:</strong> When your refund is approved, the amount is added as store credit to your account which you can use for future purchases.
      </div>

      <a href="/purchases" class="btn btn-primary">Back to Purchase History</a>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
